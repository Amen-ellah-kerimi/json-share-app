{
  "buildCommand": "prisma generate && next build",
  "installCommand": "npm ci",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true",
    "PRISMA_CLI_BINARY_TARGETS": "native,rhel-openssl-1.0.x"
  },
  "crons": [
    {
      "path": "/api/health",
      "schedule": "0 */6 * * *"
    }
  ],
  "regions": ["iad1"],
  "framework": "nextjs"
}
